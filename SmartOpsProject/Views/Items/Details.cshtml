@model SmartOps.Models.Item
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Λεπτομέρειες Προϊόντος";
}

<h2 class="mb-3">Λεπτομέρειες Προϊόντος</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row align-items-center">
            <dt class="col-sm-3">Κωδικός</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ItemCode))
                {
                    @Model.ItemCode
                    if (Model.ItemCode.StartsWith("0"))
                    {
                        <span class="badge bg-secondary ms-1">auto</span>
                    }
                }
                else
                {
                    <span class="text-muted">(Αυτόματος)</span>
                }
            </dd>

            <dt class="col-sm-3">Περιγραφή</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Μονάδα Μέτρησης</dt>
            <dd class="col-sm-9">@Model.Unit</dd>

            <dt class="col-sm-3">ΦΠΑ</dt>
            <dd class="col-sm-9">@Model.VAT.ToString("0.##")%</dd>

            <dt class="col-sm-3">Τιμή Λιανικής</dt>
            <dd class="col-sm-9">
                @(Model.RetailPrice.HasValue? Model.RetailPrice.Value.ToString("0.00") + " €" : "—")
            </dd>

            <dt class="col-sm-3">Τιμή Χονδρικής</dt>
            <dd class="col-sm-9">
                @(Model.WholesalePrice.HasValue? Model.WholesalePrice.Value.ToString("0.00") + " €" : "—")
            </dd>

        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Επεξεργασία</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Πίσω</a>
</div>
