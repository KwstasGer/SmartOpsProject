@model SmartOps.Models.Item
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Νέο Προϊόν";
}

<h2 class="mb-3">Νέο Προϊόν</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="alert alert-info">
        Μπορείτε να ορίσετε δικό σας <strong>Κωδικό Προϊόντος</strong> ή να αφήσετε το πεδίο
        με <strong>*</strong> (ή κενό) για αυτόματη δημιουργία.
    </div>

    <div class="row g-3">
        <!-- Κωδικός -->
        <div class="col-md-4">
            <label asp-for="ItemCode" class="form-label"></label>
            <input asp-for="ItemCode" class="form-control"
                   value="@(string.IsNullOrWhiteSpace(Model?.ItemCode) ? "*" : Model.ItemCode)"
                   autocomplete="off" placeholder="π.χ. * ή 00001" />
            <span asp-validation-for="ItemCode" class="text-danger"></span>
        </div>

        <!-- Περιγραφή -->
        <div class="col-md-8">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Μονάδα Μέτρησης -->
        <div class="col-md-4">
            <label asp-for="Unit" class="form-label"></label>
            @if (ViewBag.Units != null)
            {
                <select asp-for="Unit" class="form-select" asp-items="ViewBag.Units"></select>
            }
            else
            {
                <input asp-for="Unit" class="form-control" placeholder="π.χ. τεμάχιο, κιλό" />
            }
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <!-- ΦΠΑ -->
        <div class="col-md-4">
            <label asp-for="VAT" class="form-label"></label>
            <select asp-for="VAT" class="form-select" asp-items="ViewBag.VATs"></select>
            <span asp-validation-for="VAT" class="text-danger"></span>
        </div>


        <!-- Τιμές -->
        <div class="col-md-6">
            <label asp-for="RetailPrice" class="form-label"></label>
            <input asp-for="RetailPrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="RetailPrice" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="WholesalePrice" class="form-label"></label>
            <input asp-for="WholesalePrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="WholesalePrice" class="text-danger"></span>
        </div>
    </div>


    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-1"></i> Αποθήκευση
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Ακύρωση
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
