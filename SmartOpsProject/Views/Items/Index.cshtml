@model IEnumerable<SmartOps.Models.Item>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Είδη";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Είδη</h2>
    <a asp-action="Create" class="btn btn-success">+ Νέο Είδος</a>
</div>

<table class="table table-sm table-striped align-middle">
    <thead>
        <tr>
            <th>Κωδικός</th>
            <th>Περιγραφή</th>
            <th>Μ.Μ.</th>
            <th>ΦΠΑ</th>
            <th>Λιανική</th>
            <th>Χονδρική</th>
            <th style="width:160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var it in Model)
        {
            <tr>
                <td>@it.ItemCode</td>
                <td>@it.Description</td>
                <td>@it.Unit</td>
                <td>@it.VAT</td>
                <td>@(it.RetailPrice?.ToString("0.00"))</td>
                <td>@(it.WholesalePrice?.ToString("0.00"))</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@it.Id" class="btn btn-outline-secondary btn-sm">Λεπτομέρειες</a>
                    <a asp-action="Edit" asp-route-id="@it.Id" class="btn btn-primary btn-sm">Επεξεργασία</a>
                    <a asp-action="Delete" asp-route-id="@it.Id" class="btn btn-outline-danger btn-sm">Διαγραφή</a>
                </td>
            </tr>
        }
    </tbody>
</table>
