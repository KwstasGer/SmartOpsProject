@model SmartOps.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "SmartOps ERP | Σύνδεση";
    Layout = null; // ✅ Προαιρετικά: Αν θες καθαρή full-screen login σελίδα
}

<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartOps ERP | Σύνδεση</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="w-100" style="max-width: 400px;">
            <h1 class="text-center mb-4">SmartOps ERP 🚀</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                    <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                    </div>
            }

            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">Σύνδεση</h4>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" type="date" class="form-control" />                                
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Κωδικός" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary w-100">Είσοδος</button>
                         <div class="text-center mt-3">
                                <a class="btn btn-link" asp-controller="Account" asp-action="ChangePassword">Ξεχάσατε τον κωδικό σας;</a>
                        </div>

                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
    <span>Δεν έχετε λογαριασμό;</span>
    <a class="btn btn-outline-secondary btn-sm mt-1" asp-controller="Account" asp-action="Register">Εγγραφείτε εδώ</a>
</div>
        </div>
    </div>

</body>
</html>
