@model IEnumerable<SmartOpsProject.Models.Service>

@{
    ViewData["Title"] = "Υπηρεσίες";
}

<h1>Υπηρεσίες</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Νέα Υπηρεσία</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Κωδικός</th>
            <th>Περιγραφή</th>
            <th>Μονάδα</th>
            <th>ΦΠΑ</th>
            <th>Τιμή Λιανικής</th>
            <th>Τιμή Χονδρικής</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceCode</td>
                <td>@item.Description</td>
                <td>@item.Unit</td>
                <td>@item.VAT</td>
                <td>@item.RetailPrice?.ToString("0.00")</td>
                <td>@item.WholesalePrice?.ToString("0.00")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
