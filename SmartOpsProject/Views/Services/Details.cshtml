@model SmartOpsProject.Models.Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Λεπτομέρειες Υπηρεσίας";
}

<h2>Λεπτομέρειες Υπηρεσίας</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Κωδικός</dt>
            <dd class="col-sm-9">@Model.ServiceCode</dd>

            <dt class="col-sm-3">Περιγραφή</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Μονάδα Μέτρησης</dt>
            <dd class="col-sm-9">@Model.Unit</dd>

            <dt class="col-sm-3">ΦΠΑ</dt>
            <dd class="col-sm-9">@Model.VAT</dd>

            <dt class="col-sm-3">Λιανική</dt>
            <dd class="col-sm-9">@Model.RetailPrice</dd>

            <dt class="col-sm-3">Χονδρική</dt>
            <dd class="col-sm-9">@Model.WholesalePrice</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Επεξεργασία</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Πίσω</a>
</div>
