@model SmartOpsProject.Models.Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Λεπτομέρειες Υπηρεσίας";
}

<h2 class="mb-3">Λεπτομέρειες Υπηρεσίας</h2>
<hr />

<div class="card shadow-sm border-0">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">Κωδικός</dt>
            <dd class="col-sm-9">@Model.ServiceCode</dd>

            <dt class="col-sm-3 fw-semibold">Περιγραφή</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3 fw-semibold">Μονάδα Μέτρησης</dt>
            <dd class="col-sm-9">@Model.Unit</dd>

            <dt class="col-sm-3 fw-semibold">ΦΠΑ</dt>
            <dd class="col-sm-9">@Model.VAT</dd>

            <dt class="col-sm-3 fw-semibold">Τιμή Λιανικής</dt>
            <dd class="col-sm-9">@Model.RetailPrice</dd>

            <dt class="col-sm-3 fw-semibold">Τιμή Χονδρικής</dt>
            <dd class="col-sm-9">@Model.WholesalePrice</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Επεξεργασία</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Πίσω</a>
</div>
