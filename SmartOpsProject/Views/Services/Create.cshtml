@model SmartOpsProject.Models.Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Νέα Υπηρεσία";
}

<h2>Νέα Υπηρεσία</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="ServiceCode" class="form-label"></label>
            <input asp-for="ServiceCode" class="form-control" />
            <span asp-validation-for="ServiceCode" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Unit" class="form-label"></label>
            @if (ViewBag.Units != null)
            {
                <select asp-for="Unit" class="form-select" asp-items="ViewBag.Units"></select>
            }
            else
            {
                <input asp-for="Unit" class="form-control" />
            }
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <!-- VAT ως dropdown: 0%, 7%, 13%, 24% -->
        <div class="col-md-4">
            <label asp-for="VAT" class="form-label"></label>
            @if (ViewBag.VATs != null)
            {
                <select asp-for="VAT" class="form-select" asp-items="ViewBag.VATs"></select>
            }
            else
            {
                <!-- Fallback με numeric values (σωστό binding σε decimal) -->
                <select asp-for="VAT" class="form-select">
                    <option value="0">0%</option>
                    <option value="7">7%</option>
                    <option value="13">13%</option>
                    <option value="24">24%</option>
                </select>
            }
            <span asp-validation-for="VAT" class="text-danger"></span>
        </div>

        <div class="col-md-4"></div>

        <div class="col-md-6">
            <label asp-for="RetailPrice" class="form-label"></label>
            <input asp-for="RetailPrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="RetailPrice" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="WholesalePrice" class="form-label"></label>
            <input asp-for="WholesalePrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="WholesalePrice" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Ακύρωση</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
