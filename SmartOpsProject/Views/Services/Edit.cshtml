@model SmartOpsProject.Models.Service

@{
    ViewData["Title"] = "Επεξεργασία Υπηρεσίας";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ServiceCode" class="control-label"></label>
        <input asp-for="ServiceCode" class="form-control" />
        <span asp-validation-for="ServiceCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Unit" class="control-label"></label>
        <select asp-for="Unit" class="form-control" asp-items="ViewBag.Units"></select>
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VAT" class="control-label"></label>
        <select asp-for="VAT" class="form-control" asp-items="ViewBag.VATOptions"></select>
        <span asp-validation-for="VAT" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RetailPrice" class="control-label"></label>
        <input asp-for="RetailPrice" class="form-control" />
        <span asp-validation-for="RetailPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WholesalePrice" class="control-label"></label>
        <input asp-for="WholesalePrice" class="form-control" />
        <span asp-validation-for="WholesalePrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Αποθήκευση</button>
    <a asp-action="Index" class="btn btn-secondary">Ακύρωση</a>
</form>

@section Scripts {
        <!-- Χρησιμοποιούμε partial αντί για RenderPartialAsync, γιατί είναι πιο απλό, καθαρό και αποφεύγουμε CS1503 -->
        <partial name="_ValidationScriptsPartial" />
}
