@model SmartOpsProject.Models.Service

@{
    ViewData["Title"] = "Διαγραφή Υπηρεσίας";
}

<h1>@ViewData["Title"]</h1>

<h4 class="text-danger">Είσαι σίγουρος ότι θέλεις να διαγράψεις αυτή την υπηρεσία;</h4>

<div class="card mt-3 mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Κωδικός</dt>
            <dd class="col-sm-9">@Model.ServiceCode</dd>

            <dt class="col-sm-3">Περιγραφή</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Μονάδα</dt>
            <dd class="col-sm-9">@Model.Unit</dd>

            <dt class="col-sm-3">ΦΠΑ</dt>
            <dd class="col-sm-9">@Model.VAT %</dd>

            <dt class="col-sm-3">Λιανική Τιμή</dt>
            <dd class="col-sm-9">@Model.RetailPrice?.ToString("0.00")</dd>

            <dt class="col-sm-3">Χονδρική Τιμή</dt>
            <dd class="col-sm-9">@Model.WholesalePrice?.ToString("0.00")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Διαγραφή</button>
    <a asp-action="Index" class="btn btn-secondary">Ακύρωση</a>
</form>
