@model SmartOps.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Νέος Πελάτης";
}

<h2>Νέος Πελάτης</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="alert alert-info">
        Βάλε δικό σου <b>Κωδικό Πελάτη</b> ή άφησέ τον με <b>*</b> (ή κενό) για αυτόματη δημιουργία.
    </div>

    <div class="row g-3">
        <!-- Κωδικός Πελάτη: προεπιλογή '*' για auto -->
        <div class="col-md-4">
            <label asp-for="CustomerCode" class="form-label"></label>
            <input asp-for="CustomerCode" class="form-control"
                   value="@(string.IsNullOrWhiteSpace(Model?.CustomerCode) ? "*" : Model.CustomerCode)" />
            <span asp-validation-for="CustomerCode" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="TaxIdentificationNumber" class="form-label"></label>
            <input asp-for="TaxIdentificationNumber" class="form-control" />
            <span asp-validation-for="TaxIdentificationNumber" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="CustomerCategory" class="form-label"></label>
            @if (ViewBag.CustomerCategories != null)
            {
                <select asp-for="CustomerCategory" class="form-select" asp-items="ViewBag.CustomerCategories"></select>
            }
            else
            {
                <input asp-for="CustomerCategory" class="form-control" />
            }
            <span asp-validation-for="CustomerCategory" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="VatStatus" class="form-label"></label>
            @if (ViewBag.VatStatuses != null)
            {
                <select asp-for="VatStatus" class="form-select" asp-items="ViewBag.VatStatuses"></select>
            }
            else
            {
                <input asp-for="VatStatus" class="form-control" />
            }
            <span asp-validation-for="VatStatus" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Ακύρωση</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
