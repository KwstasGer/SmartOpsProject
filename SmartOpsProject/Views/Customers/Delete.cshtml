@model SmartOps.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Διαγραφή Πελάτη";
}

<h2 class="text-danger">Διαγραφή Πελάτη</h2>
<p>Είστε σίγουροι ότι θέλετε να διαγράψετε τον παρακάτω πελάτη;</p>

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">
            @if (!string.IsNullOrEmpty(Model.CustomerCode))
            {
                @Model.CustomerCode
            }
            else
            {
                <span class="text-muted">— (Αυτόματος)</span>
            }
            — @Model.Name
        </h5>

        <p class="mb-1"><strong>ΑΦΜ:</strong> @Model.TaxIdentificationNumber</p>
        <p class="mb-1"><strong>Διεύθυνση:</strong> @Model.Address, @Model.City, @Model.PostalCode</p>
        <p class="mb-1"><strong>Χώρα:</strong> @Model.Country</p>
        <p class="mb-1"><strong>Κατηγορία:</strong> @Model.CustomerCategory</p>
        <p class="mb-0"><strong>Καθεστώς ΦΠΑ:</strong> @Model.VatStatus</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Οριστική Διαγραφή
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Ακύρωση
        </a>
    </div>
</form>
