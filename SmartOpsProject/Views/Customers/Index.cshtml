@model IEnumerable<SmartOps.Models.Customer>
@{
    ViewData["Title"] = "Λίστα Πελατών";
}

@if (TempData["SuccessMessage"] != null)
{
                <div id="success-message" class="alert alert-success">
        @TempData["SuccessMessage"]
                </div>
}


<h2>Λίστα Πελατών</h2>
<p>
    <a asp-action="Create" class="btn btn-success">+ Νέος Πελάτης</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Κωδικός</th>
            <th>Όνομα</th>
            <th>ΑΦΜ</th>
            <th>Χώρα</th>
            <th>Πόλη</th>
            <th>Τ.Κ.</th>
            <th>ΦΠΑ</th>
            <th>Κατηγορία</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerCode</td>
                <td>@item.Name</td>
                <td>@item.TaxIdentificationNumber</td>
                <td>@item.Country</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td>@item.VatStatus</td>
                <td>@item.CustomerCategory</td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Επεξεργασία</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Λεπτομέρειες</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-sm btn-danger">Διαγραφή</a>
                </td>
            </tr>
        }
    </tbody>
</table>

