@model IEnumerable<SmartOps.Models.Customer>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Πελάτες";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Πελάτες</h2>
    <a asp-action="Create" class="btn btn-success">+ Νέος Πελάτης</a>
</div>

<!-- 🔹 Μήνυμα επιτυχίας / σφάλματος -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- 🔎 Αναζήτηση -->
<div class="card shadow-sm border-0 mb-3">
    <div class="card-body">
        <div class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input id="customerSearch" type="text" class="form-control"
                           placeholder="Αναζήτηση Πελάτη… (κωδικός, επωνυμία, ΑΦΜ, χώρα, πόλη, διεύθυνση, Τ.Κ., κατηγορία)">
                    <button id="clearCustomerSearch" type="button" class="btn btn-outline-secondary">Καθαρισμός</button>
                </div>
            </div>
            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                <small class="text-muted">
                    Εμφανίζονται <span id="rowsCount">0</span> από <span id="rowsTotal">0</span> πελάτες
                </small>
            </div>
        </div>
    </div>
</div>

<table id="customersTable" class="table table-sm table-striped align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Κωδικός</th>
            <th>Επωνυμία</th>
            <th>ΑΦΜ</th>
            <th>Χώρα</th>
            <th>Πόλη</th>
            <th>Τ.Κ.</th>
            <th>Κατηγορία</th>
            <th>Καθεστώς ΦΠΑ</th>
            <th class="text-end" style="width:150px;">Ενέργειες</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var c in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(c.CustomerCode))
                        {
                            @c.CustomerCode
                            @if (c.CustomerCode.StartsWith("0"))
                            {
                                <span class="badge bg-secondary ms-1">auto</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">(Αυτόματος)</span>
                        }
                    </td>
                    <td>@c.Name</td>
                    <td>@c.TaxIdentificationNumber</td>
                    <td>@c.Country</td>
                    <td>@c.City</td>
                    <td>@c.PostalCode</td>
                    <td>@c.CustomerCategory</td>
                    <td>@c.VatStatus</td>
                    <td class="text-end">
                        <div class="btn-group-vertical btn-group-sm action-stack" role="group" aria-label="Actions">
                            <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-primary">Λεπτομέρειες</a>
                            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-secondary">Επεξεργασία</a>
                            <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-outline-danger">Διαγραφή</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-muted py-4">
                    Δεν υπάρχουν πελάτες καταχωρημένοι.
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Tooltips (αν υπάρχουν στοιχεία με data-bs-toggle="tooltip")
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
            new bootstrap.Tooltip(el);
        });

        // 🔎 Client-side αναζήτηση (αγνοεί τόνους)
        (function () {
            const input = document.getElementById('customerSearch');
            const clearBtn = document.getElementById('clearCustomerSearch');
            const table = document.getElementById('customersTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const rowsTotalEl = document.getElementById('rowsTotal');
            const rowsCountEl = document.getElementById('rowsCount');

            const dataRows = rows.filter(r => !r.querySelector('td[colspan]'));
            rowsTotalEl.textContent = dataRows.length.toString();

            const normalize = (str) => (str || '')
                .toString()
                .normalize('NFD')
                .replace(/[\u0300-\u036f]/g, '')
                .toLowerCase()
                .trim();

            // 0=Κωδικός,1=Επωνυμία,2=ΑΦΜ,3=Χώρα,4=Πόλη,5=Τ.Κ.,6=Κατηγορία,7=Καθεστώς ΦΠΑ
            const filterCols = [0,1,2,3,4,5,6,7];

            let t = null;
            const onSearch = () => {
                const q = normalize(input.value);
                let visible = 0;

                dataRows.forEach(tr => {
                    let text = '';
                    filterCols.forEach(idx => {
                        const td = tr.children[idx];
                        if (td) text += ' ' + normalize(td.textContent);
                    });

                    const match = q.length === 0 || text.includes(q);
                    tr.style.display = match ? '' : 'none';
                    if (match) visible++;
                });

                const emptyRow = rows.find(r => r.querySelector('td[colspan]'));
                if (emptyRow) emptyRow.style.display = (visible === 0 ? '' : 'none');

                rowsCountEl.textContent = visible.toString();
            };

            const debounced = () => { clearTimeout(t); t = setTimeout(onSearch, 150); };

            input.addEventListener('input', debounced);
            clearBtn.addEventListener('click', () => {
                input.value = '';
                onSearch();
                input.focus();
            });

            onSearch();
        })();
    </script>
}
