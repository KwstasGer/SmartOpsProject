@model SmartOps.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Λεπτομέρειες Πελάτη";
}

<h2>Λεπτομέρειες Πελάτη</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Κωδικός</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.CustomerCode))
                {
                    @Model.CustomerCode
                }
                else
                {
                    <span class="text-muted">(Αυτόματος)</span>
                }
            </dd>

            <dt class="col-sm-3">Επωνυμία</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">ΑΦΜ</dt>
            <dd class="col-sm-9">@Model.TaxIdentificationNumber</dd>

            <dt class="col-sm-3">Χώρα</dt>
            <dd class="col-sm-9">@Model.Country</dd>

            <dt class="col-sm-3">Διεύθυνση</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Πόλη</dt>
            <dd class="col-sm-9">@Model.City</dd>

            <dt class="col-sm-3">Τ.Κ.</dt>
            <dd class="col-sm-9">@Model.PostalCode</dd>

            <dt class="col-sm-3">Κατηγορία</dt>
            <dd class="col-sm-9">@Model.CustomerCategory</dd>

            <dt class="col-sm-3">Καθεστώς ΦΠΑ</dt>
            <dd class="col-sm-9">@Model.VatStatus</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Επεξεργασία
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Πίσω
    </a>
</div>
