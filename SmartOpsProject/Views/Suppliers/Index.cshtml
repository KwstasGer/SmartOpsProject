@model IEnumerable<SmartOpsProject.Models.Supplier>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Προμηθευτές";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Προμηθευτές</h2>
    <a asp-action="Create" class="btn btn-success">+ Νέος Προμηθευτής</a>
</div>

<!-- 🔹 Μήνυμα επιτυχίας / σφάλματος -->
@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- 🔎 Αναζήτηση -->
<div class="card shadow-sm border-0 mb-3">
    <div class="card-body">
        <div class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input id="supplierSearch" type="text" class="form-control"
                           placeholder="Αναζήτηση Προμηθευτή… (κωδικός, περιγραφή, ΑΦΜ, χώρα, πόλη, διεύθυνση)">
                    <button id="clearSearch" type="button" class="btn btn-outline-secondary">Καθαρισμός</button>
                </div>
            </div>
            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                <small class="text-muted">
                    Εμφανίζονται <span id="rowsCount">0</span> από <span id="rowsTotal">0</span> προμηθευτές
                </small>
            </div>
        </div>
    </div>
</div>

<table id="suppliersTable" class="table table-sm table-striped align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Κωδικός</th>
            <th>Περιγραφή</th>
            <th>ΑΦΜ</th>
            <th>Χώρα</th>
            <th>Διεύθυνση</th>
            <th>Πόλη</th>
            <th>Τ.Κ.</th>
            <th>Κατηγορία</th>
            <th>Καθεστώς ΦΠΑ</th>
            <th class="text-end" style="width:150px;">Ενέργειες</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var s in Model)
            {
                <tr>
                    <td>
                        @s.SupplierCode
                        @if (!string.IsNullOrEmpty(s.SupplierCode) && s.SupplierCode.StartsWith("0"))
                        {
                            <span class="badge bg-secondary ms-1">auto</span>
                        }
                    </td>
                    <td>@s.Name</td>
                    <td>@s.TaxIdentificationNumber</td>
                    <td>@s.Country</td>
                    <td>@s.Address</td>
                    <td>@s.City</td>
                    <td>@s.PostalCode</td>
                    <td>@s.SupplierCategory</td>
                    <td>@s.VatStatus</td>
                    <td class="text-end">
                        <div class="btn-group-vertical btn-group-sm action-stack" role="group" aria-label="Actions">
                            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-primary">Λεπτομέρειες</a>
                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-secondary">Επεξεργασία</a>
                            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger">Διαγραφή</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-muted py-4">
                    Δεν υπάρχουν προμηθευτές καταχωρημένοι.
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Auto-hide για μήνυμα επιτυχίας
        window.addEventListener('DOMContentLoaded', function () {
            setTimeout(function () {
                var alertEl = document.getElementById("successMessage");
                if (!alertEl) return;

                if (typeof bootstrap !== "undefined" && bootstrap.Alert) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(alertEl);
                    bsAlert.close();
                } else {
                    alertEl.style.display = "none";
                }
            }, 3000);
        });
    </script>

    <script>
        (function () {
            const input = document.getElementById('supplierSearch');
            const clearBtn = document.getElementById('clearSearch');
            const table = document.getElementById('suppliersTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const rowsTotalEl = document.getElementById('rowsTotal');
            const rowsCountEl = document.getElementById('rowsCount');

            // Μέτρηση αρχικού πλήθους (αγνόησε τη γραμμή "Δεν υπάρχουν...")
            const dataRows = rows.filter(r => !r.querySelector('td[colspan]'));
            rowsTotalEl.textContent = dataRows.length.toString();

            const normalize = (str) => (str || '')
                .toString()
                .normalize('NFD')
                .replace(/[\u0300-\u036f]/g, '')
                .toLowerCase()
                .trim();

            const filterCols = [0, 1, 2, 3, 4, 5];

            let t = null;
            const onSearch = () => {
                const q = normalize(input.value);
                let visible = 0;

                dataRows.forEach(tr => {
                    let text = '';
                    filterCols.forEach(idx => {
                        const td = tr.children[idx];
                        if (td) text += ' ' + normalize(td.textContent);
                    });

                    const match = q.length === 0 || text.includes(q);
                    tr.style.display = match ? '' : 'none';
                    if (match) visible++;
                });

                const emptyRow = rows.find(r => r.querySelector('td[colspan]'));
                if (emptyRow) emptyRow.style.display = (visible === 0 ? '' : 'none');

                rowsCountEl.textContent = visible.toString();
            };

            const debounced = () => {
                clearTimeout(t);
                t = setTimeout(onSearch, 150);
            };

            input.addEventListener('input', debounced);
            clearBtn.addEventListener('click', () => {
                input.value = '';
                onSearch();
                input.focus();
            });

            onSearch();
        })();
    </script>
}
