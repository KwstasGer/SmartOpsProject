@model SmartOpsProject.Models.Supplier
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Λεπτομέρειες Προμηθευτή";
}

<h2 class="text-primary mb-3">Λεπτομέρειες Προμηθευτή</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="card-title fw-bold mb-3 text-dark">
            @Model.SupplierCode — @Model.Name
        </h5>

        <dl class="row mb-0">
            @if (!string.IsNullOrEmpty(Model.TaxIdentificationNumber))
            {
                <dt class="col-sm-3">ΑΦΜ</dt>
                <dd class="col-sm-9">@Model.TaxIdentificationNumber</dd>
            }

            @if (!string.IsNullOrEmpty(Model.Country))
            {
                <dt class="col-sm-3">Χώρα</dt>
                <dd class="col-sm-9">@Model.Country</dd>
            }

            @if (!string.IsNullOrEmpty(Model.Address))
            {
                <dt class="col-sm-3">Διεύθυνση</dt>
                <dd class="col-sm-9">@Model.Address</dd>
            }

            @if (!string.IsNullOrEmpty(Model.City))
            {
                <dt class="col-sm-3">Πόλη</dt>
                <dd class="col-sm-9">@Model.City</dd>
            }

            @if (!string.IsNullOrEmpty(Model.PostalCode))
            {
                <dt class="col-sm-3">Τ.Κ.</dt>
                <dd class="col-sm-9">@Model.PostalCode</dd>
            }

            @if (!string.IsNullOrEmpty(Model.SupplierCategory))
            {
                <dt class="col-sm-3">Κατηγορία</dt>
                <dd class="col-sm-9">@Model.SupplierCategory</dd>
            }

            @if (!string.IsNullOrEmpty(Model.VatStatus))
            {
                <dt class="col-sm-3">Καθεστώς ΦΠΑ</dt>
                <dd class="col-sm-9">@Model.VatStatus</dd>
            }
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Επεξεργασία
    </a>
    <a asp-action="Index" class="btn btn-light">
        <i class="bi bi-arrow-left"></i> Πίσω
    </a>
</div>
