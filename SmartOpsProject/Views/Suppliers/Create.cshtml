@model SmartOpsProject.Models.Supplier
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Νέος Προμηθευτής";
}

<h2>Νέος Προμηθευτής</h2>

<form asp-action="Create" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- 🔹 Ενημερωτικό πλαίσιο όπως στους Πελάτες -->
    <div class="alert alert-info">
        Βάλε δικό σου <b>Κωδικό Προμηθευτή</b> ή άφησέ τον με <b>*</b> (ή κενό) για αυτόματη δημιουργία.
    </div>

    <div class="row g-3">

        <!-- Κωδικός (προεπιλεγμένο "*") -->
        <div class="col-md-4">
            <label asp-for="SupplierCode" class="form-label"></label>
            <input asp-for="SupplierCode" class="form-control"
                   value="@(string.IsNullOrWhiteSpace(Model?.SupplierCode) ? "*" : Model.SupplierCode)"
                   autocomplete="off" placeholder="π.χ. * ή 0001" />
            <span asp-validation-for="SupplierCode" class="text-danger"></span>
        </div>

        <!-- Περιγραφή (Υποχρεωτικό) -->
        <div class="col-md-8">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Προαιρετικά πεδία -->
        <div class="col-md-4">
            <label asp-for="TaxIdentificationNumber" class="form-label"></label>
            <input asp-for="TaxIdentificationNumber" class="form-control" />
            <span asp-validation-for="TaxIdentificationNumber" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SupplierCategory" class="form-label"></label>
            @if (ViewBag.SupplierCategories != null)
            {
                <select asp-for="SupplierCategory" class="form-select" asp-items="ViewBag.SupplierCategories"></select>
            }
            else
            {
                <input asp-for="SupplierCategory" class="form-control" />
            }
            <span asp-validation-for="SupplierCategory" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="VatStatus" class="form-label"></label>
            @if (ViewBag.VatStatuses != null)
            {
                <select asp-for="VatStatus" class="form-select" asp-items="ViewBag.VatStatuses"></select>
            }
            else
            {
                <input asp-for="VatStatus" class="form-control" />
            }
            <span asp-validation-for="VatStatus" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Αποθήκευση</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Ακύρωση</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
